
<div class="login-form">
  <%= form_with scope: :signin,id: 'signin', local: true do |form| %>
  <h2 class="text-center">Log in</h2>
  <div class="form-group">
    <%= form.text_field :username , placeholder:"User name" %>
  </div>

  <div class="form-group">
    <%= form.text_field :password , placeholder:"password" %>
  </div>

  <div class="form-group">
    <%= form.submit "signin", :class => "btn btn-primary btn-block", form: 'signin' %>
  </div>
  <div class="clearfix">
    <a href="#" class="pull-c">Forgot Password?</a>
  </div>

  <% end %>
  <p class="text-center"><%= link_to ' Create an Account' , signup_path %></a></p>
</div>