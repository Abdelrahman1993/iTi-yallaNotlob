<%= render 'navbar' %>

<div class=" py-5 m-0">
  <div class="container">
    <div class="row">
      <div class="col-4">
        <h2>Groups</h2>
      </div>
      <div class="col-8">
      </div>
    </div>
    <%= form_for @group  do |f| %>
      <div class="row">
        <div class="col-4">
        </div>
        <div class="col-4 pr-3">
          <%= f.text_field :name , id: 'grpName', class: 'form-control', placeholder: 'Enter group\'s Name:' %>
        </div>
        <div class="col-4 pl-0">
          <%= f.submit "Add Group" , class:"btn btn-light" %>
        </div>
      </div>
    <% end %>
    <div class="row pt-5">
      <div class="col-4 pt-3 tablesList text-center">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Group Name</th>
              <th scope="col">Actions</th>
            </tr>
          </thead>
          <tbody id="myGroups">
            <% @groups.each do |group| %>
              <tr>
                <td>
                  <%= link_to group_path(group) , method: :get, class: group_path(group) do %>
                    <h5 class="groupName"><%= group.name %></h5>
                  <% end %>
                </td>
                <td class="pr-0">
                  <%= link_to group_path(group) , method: :get, class: group_path(group) do %>
                    <i class="fas fa-user-plus fa-lg pr-4"></i>
                  <% end %>
                  <%= link_to group_path(group) , method: :delete, data: { confirm: 'Are you sure?' }, class: group_path(group) do %>
                    <i class="fas fa-user-times fa-lg"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="col-7" id="singleGroup">
        <div class="row mt-3">
          <div class="col">
            <% $group = Group.find_by(id: params[:id],user_id: current_user.id) %>
            <%if(!$group)%>
              <h2>Group Not Found !</h2>
            <%else %>
              <h3 id="groupTitle"><%= $group.name %></h3>
            </div>
          </div>
          <% @userFriends= Friendship.where(user_id: current_user.id) %>
          <%= form_tag({controller: "groups", action: "addUserGroup"}, method: "post") do %>
            <div class="row mt-3">
              <div class="col-6">
                <select id="dropdown" class="ui fluid search dropdown" multiple="">
                  <% @userFriends.each do |user| %>
                    <option data-name= "<%= user.friend.name%>" data-img = "<%= user.friend.image%>" value="<%= user.friend.id%>"><%= user.friend.name%></option>
                  <%end%>
                </select>
                <input type="hidden" id="friends" name="friends" value="">
              </div>
              <div class="col-6">
                <%= submit_tag("Add", :type => 'submit', class:"btn btn-light") %>
              </div>
            </div>
          <% end %>
          <div class="row py-3">
            <% @groupUsers = UserGroup.where(group_id: $test)
                                @groupUsers.each do |groupUser| %>
              <div class="col-4 mt-2">
                <div class="row">
                  <div class="col-4">
                    <% if current_user.image %>
                      <img src="<%= current_user.image %>" style="border-radius:50%">
                    <% else %>
                      <img height=40 class="profile m-auto" src="<%= asset_path('default.png') %>">
                    <% end %>
                  </li>
                </div>
                <div class="col-8">
                  <a href="#" class="d-block">
                    <%= User.find_by(id: groupUser.user_id).name %>
                  </a>
                  <%= link_to group_user_path(groupUser.user_id) , method: :delete, data: { confirm: 'Are you sure?' }, class: group_user_path(groupUser.user_id) do %>
                    <h6>Remove User</h6>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        <%end %>
      </div>
    </div>
  </div>
</div>
</div>
<script>
  $('.ui.dropdown')
        .dropdown({
     onAdd: function (value, text, $selectedItem) {
                let img = $(`[data-name=\"${text}\"`).data("img")
                console.log(img)
                const friends = document.getElementById("friends");
                    friends.value += `${value},`
     console.log(friends.value);
     }
       });
</script>
