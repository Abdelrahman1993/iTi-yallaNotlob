<%= render 'navbar' %>
<div class="jumbotron py-5 m-0">
    <div class="container">
        <div class="row">
            <div class="col-4">
                    <h2>Groups</h2>
            </div>
            <div class="col-8">

            </div>
        </div>
 
       <%= render :template => "groups/new" %>
          

        <div class="row pt-5">
            <div class="col-4 pt-3 tablesList text-center">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Group Name</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody id="myGroups">

                    <% @groups.each do |group| %>
                        <tr>
                            <td><h5 class="groupName" onclick="displayGroup('<%= group.name %>')"><%= group.name %></h5></td>
                            <td class="pr-0">
                                <i class="fas fa-user-plus fa-lg pr-4" onclick="displayGroup('<%= group.name %>')"></i>
                              
                                <%= link_to group_path(group) , method: :delete, data: { confirm: 'Are you sure?' }, class: group_path(group) do %>
                                    <i class="fas fa-user-times fa-lg"></i>
                                <% end %>

                            </td>
                        </tr>
                   <% end %>
                    </tbody>
                    </table>
            </div>
            <div class="col-7" id="singleGroup">
                <div class="row mt-3">
                    <div class="col">
                        <h3 id="groupTitle">.</h3>
                    </div>
                </div>



                <%= form_for Group.new do |f| %>
                    <div class="row mt-3">
                            <div class="col-6">
                            <%= f.text_field :name , id: 'friendToGroup', class: 'form-control', placeholder: 'Please enter your friend\'s name' %>
                            </div>
                            <div class="col-6">
                         
                            <%= f.submit "Add", :type => 'button', class:"btn btn-light", :onclick => 'groups#saveInUserGroup' %>
                            </div>
                    </div>
                <% end %>



                <div class="row py-3">
                    <div class="col-4 mt-2">
                        <div class="row">
                            <div class="col-4">
                                <img width="50" src="iconfinder_user_male4_172628.png" rel="userImage"/>
                            </div>
                         <%= render :template => "usergroups/index" %> 

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>